<div class="product-status mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-status-wrap" style="position: relative;">
                    <h4 style="color: royalblue;">
                    </h4>
                    
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="breadcome-heading" style="margin-top: 20px;">
                            <form role="search" class="sr-input-func" >
                                
                            </form>
                        </div>
                    </div>
                    <div class="add-product" >
                    </div>
                    <div class="asset-inner">
                        <table>
                            <tr>
                                <th>No</th>
                                <th>Code order</th>
                                <th>Status</th>
                                <th>Discount</th>
                                <th>Total</th>
                                <th>Sent date</th>
                                <th>Name</th>
                                <th>Phone</th>
                                <th>Address</th>
                                <th>Process</th>
                            </tr>
                            {{#each allOrder}}
                            <tr style="background:rgb(223, 221, 221)">
                                <td style="font-weight:540;">{{increase @index 1}}</td>
                                <td style="color:blue;" id="print-detail">{{_id}}<i  class="bi bi-caret-down" style="cursor: pointer;"></i></td>
                                {{#if status}}
                                <td><button class="pd-setting " id="taolao" style="cursor: not-allowed;">Processed </button></td>
                                {{else}}
                                <td><button class="pd-setting uncomplete" id="taolao" style="cursor: not-allowed;background-color:red">Waiting for progressing</button></td>
                                {{/if}}
                                <td>{{discount}}</td>
                                <td>${{sum}}</td>
                                <td>{{momentFormatL createdAt}}</td>
                                <td>{{user.name}}</td>
                                <td>{{tel}}</td>
                                <td>{{location}}</td>
                                {{#if status}}
                                <td></td>
                                {{else}}
                                <td><button class="pd-setting btnAccept" data-id="{{_id}}" id="taolao" style="cursor: pointer; background-color:red">Accept</button></td>
                                {{/if}}
                                <p>{{products.name}}</p>
                            </tr>
                           
                            <td colspan="8">
                                <div class ="detail-order menu-detail " style=" padding-left:5%;">
                                    <p style="color:red;font-weight:600;">DETAILED ORDER:   <i class="bi bi-x-square close-detail" style="margin-left:100px; color:red;"></i></p>
                                    <table style="margin-left:10%;">
                                        <thead>
                                            <tr>
                                            <th>No</th>
                                            <th>Product name</th>
                                            <th>Size</th>
                                            <th>Color</th>
                                            <th>Quantity</th>
                                            <th>Price</th>
                                            <th>Total</th>
                                            </tr>
                                            

                                        </thead>
                                        <tbody>
                                            {{#each this.products}}
                                            <tr>
                                                <td>{{increase @index 1}}</td>
                                                <td class="nameProduct"></td>
                                                <td>{{size}}</td>
                                                <td>{{color}}</td>
                                                <td>{{quantity}}</td>
                                                <td>${{unitPrice}}</td>
                                                <td>${{total}}</td>
                                            </tr>
                                            {{/each}}
                                           
                                        </tbody>
                                    
                                </div>
                                    </table>
                                    
                            </td>
                            {{/each}}
                            
                           </table>

                    </div>
                    <div class="custom-pagination">
                        <span style="display: none;" id="quantityy">{{quantityPageProduct}}</span>
                        <ul class="pagination" style="margin-top:15px">
                            <li class="page-item"><a class="page-link" href="?page=2"></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="bg-black-over" class="ds-none"></div>
    <div style="display: none;" id="currentPage-hb">{{currentPage}}</div>
<div style="display: none;" id="nameProduct">{{allOrderDetail}}</div>
</div>
<script> 
    
    let btnAccept=document.querySelectorAll('.btnAccept')
    let printDetail=document.querySelectorAll('#print-detail')
    let detailOrder=document.querySelectorAll('.detail-order')
    let closeDetail=document.querySelectorAll('.close-detail')
    let nameProduct=document.querySelectorAll('.nameProduct')
    const nameOfProduct=JSON.parse(document.querySelector('#nameProduct').innerText)
    nameProduct.forEach((item,index)=>{
                item.innerHTML= nameOfProduct[index]
        })

    printDetail.forEach((item,index)=>{
        item.addEventListener('click',(e)=>{
            detailOrder[index].classList.toggle('menu-detail')

        })
    })

    closeDetail.forEach((item,index)=>{
        item.addEventListener('click',(e)=>{
            detailOrder[index].style.display="none"
        })
    })

    
    btnAccept.forEach((item,index)=>{
        item.addEventListener('click',(e)=>{
            console.log(index)
            fetch(`${window.location.origin}/order/accept/${item.dataset.id}`)
            .then(res=>res.json())
            .then(res=>{
                console.log(res)
                if(res.success)
                {
                    e.target.remove()
                    document.querySelectorAll('.uncomplete')[index].style.backgroundColor ="#006DF0";
                    document.querySelectorAll('.uncomplete')[index].innerText="Processed"
                }
            })
        })
    })

    const paginaEl=document.querySelector('.pagination')
    const currentPage=parseInt(document.querySelector('#currentPage-hb').innerText)
    const quantityy=parseInt(document.querySelector('#quantityy').innerText)
    console.log(quantityy)
    let htmlPagi=`<li class="page-item"><a class="page-link" href="?page=${currentPage===1?1:currentPage-1}"> <i class="bi bi-caret-left-fill"></i> </a></li>`
    
    for(let i=1;i<=quantityy;i++){
        htmlPagi+=`<li class="page-item"><a class="page-link ${i==currentPage?'active-page-item':''}" href="?page=${i}">${i}</a></li>`
    }
    htmlPagi+=`<li class="page-item"><a class="page-link" href="?page=${currentPage===quantityy?quantityy:currentPage+1}"> <i class="bi bi-caret-right-fill"></i> </a></li>`
    paginaEl.innerHTML=htmlPagi
</script>