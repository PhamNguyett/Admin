        loadURL = function (event) {
            imgProduct.src&&URL.revokeObjectURL(imgProduct.src)
            if(event.target.files[0].type.split('/')[0]=='image'){
                element.src = URL.createObjectURL(event.target.files[0]);
                console.log(event.target.files[0])
                imgProduct.src=element.src
            }
        }
        element.addEventListener('change',loadURL)

    })
</script>

