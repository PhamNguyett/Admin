<script>
    document.addEventListener('DOMContentLoaded',()=>{
        let reupAvatar=document.querySelector('.bi-pencil-square')
        let imageUrl=document.querySelector('input[name="image"]')
        let avatar=document.querySelector('.avatar')
        let imageEl=document.querySelector('#print-image')
        let urlImage
       reupAvatar.addEventListener('click',(e)=>{
           avatar.src="";
           avatar.style.display="none";
           imageUrl.style.display="block";
           reupAvatar.style.display="none";
       })

       imageUrl.addEventListener('change',(e)=>{
        if(urlImage){
            URL.revokeObjectURL(urlImage)   
        }
        urlImage=URL.createObjectURL(e.target.files[0])
        imageEl.src=urlImage
        avatar.src=urlImage
        })
        
    })
</script> 



