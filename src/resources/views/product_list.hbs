 <div class="breadcome-area">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="breadcome-list  single-page-breadcome">
                <div class="row">
                    <ul class="nav navbar-nav" id="margin-top" >
                        <li class="nav-item"><a href="/product/all" class="nav-link">All product</a>
                        </li>
                        {{#each caterology}}
                        <li class="nav-item"><a href="/product/caterology/{{this}}" class="nav-link">{{upperCase this}}</a>
                        </li>
                        {{/each}}
                    </ul>
                    <div id="bread-product-menu">
                        <p > <a href="/Dashboard" style="color:#000;">Home</a> / Product</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
        <div class="product-status mg-b-15">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="product-status-wrap" style="position: relative;">
                            <h4>Product List
                            </h4>
                            <form method="get" >
                                <input type="text" placeholder="Find product ... ?" name="key" id="find-input">
                                <button>Find</button>
                            </form>
                            <div class="add-product">
                                <a href="/product/add">Add Product</a>
                            </div>
                            <div class="asset-inner">
                                <table>
                                    <tr>
                                        <th>No</th>
                                        <th>Image</th>
                                        <th>Name of product</th>
                                        <th>Status</th>
                                        <th>Quantity</th>
                                        <th>Slug</th>
                                        <th style="color: rgb(250, 39, 39);">Promotion price</th>
                                        <th>Price</th>
                                        <th>Setting</th>
                                    </tr>
                                    {{#each allProduct}}
                                    <tr>
                                        <td>{{increase @index 1}}</td>
                                        <td><img src={{imagesUrl.[0]}} alt="" /></td>
                                        <td>{{name}}</td>
                                        <td>
                                            <button class="pd-setting">Active</button>
                                        </td>
                                        <th>{{quantity info}}</th>
                                        <td>{{slug}}</td>
                                        <td style="color: rgb(250, 39, 39);">{{pricePromotion}}</td>
                                        <td style="text-decoration: line-through;">{{price}}$</td>
                                        <td>
                                            <a href= "/product/edit"><button data-toggle="tooltip" title="Edit" class="pd-setting-ed"><i class="fa fa-pencil-square-o" ></i></button></a>
                                            <button data-toggle="tooltip" title="Trash" class="pd-setting-ed"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
                                        </td>
                                    </tr>
                                    {{/each}}
                                    
                                </table>
                            </div>
                            <div class="custom-pagination">
								<ul class="pagination">
									<li class="page-item"><a class="page-link" href="#">Previous</a></li>
									<li class="page-item"><a class="page-link" href="#">1</a></li>
									<li class="page-item"><a class="page-link" href="#">2</a></li>
									<li class="page-item"><a class="page-link" href="#">3</a></li>
									<li class="page-item"><a class="page-link" href="#">Next</a></li>
								</ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>